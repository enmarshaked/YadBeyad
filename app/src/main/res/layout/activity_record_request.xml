<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recordRequest">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="אנא פרטו את בקשתכם"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="לחצו על המיקורופון כדי להתחיל להקליט\n ולסיום לחצו על 'שליחה'"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#1E1C1C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/recordButton"
            android:layout_width="260dp"
            android:layout_height="278dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableBottom="@drawable/rec"
            android:text="Button"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/send"
            android:layout_width="273dp"
            android:layout_height="112dp"
            android:fontFamily="@font/rubik_bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="שליחה"
            android:textSize="36sp"
            app:backgroundTint="#26A69A" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>